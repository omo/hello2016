<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="es.flakiness.hellolatency.MainActivity">
    <Button
        android:id="@+id/start_button_10b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start 10b"/>
    <Button
        android:id="@+id/start_button_1k"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start 1k"/>
    <Button
        android:id="@+id/start_button_100k"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start 100k"/>
    <Button
        android:id="@+id/start_button_1m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start 1M"/>
    <Button
        android:id="@+id/start_button_4m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start 4M"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/checkbox_write"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:text="Write To Fiile"/>
    </LinearLayout>
</LinearLayout>
